<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                                

    
                 
                           
                                                                         
                                                             
                                          

           

    <com.esightcorp.hmd.lib.customdialoglib.MenuCustomLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/menu" android:tag="layout/custom_dialog_layout_0" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="5.3dp"
                android:paddingBottom="5.3dp"
                android:tag="binding_1"               
                android:textColor="?colBackground"
                android:textSize="64.1sp"
                android:textStyle="bold"
                android:background="?colForeground"
                android:layout_alignParentTop="true"
                />

            <ScrollView
                android:id="@+id/scroll"
                style="@style/full_screen_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/divider"
                android:layout_below="@+id/title"
                android:background="?colBackground"
                android:soundEffectsEnabled="false"
                android:splitMotionEvents="false">

                <TextView
                    android:id="@+id/description"
                    style="@style/full_screen_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:paddingEnd="24dp"
                    android:tag="binding_2"               
                    android:textColor="?colForeground"

                    android:textSize="50.7sp" />

            </ScrollView>

            <ImageView
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?colForeground"
                android:layout_above="@+id/buttons"/>

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="?colBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="21.3dp"
                android:paddingBottom="21.3dp">

                <Button
                    android:id="@+id/btnPos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:paddingLeft="53.3dp"
                    android:paddingRight="53.3dp"
                    android:paddingTop="1.3dp"
                    android:paddingBottom="1.3dp"
                    android:tag="binding_3"                   
                    android:textAllCaps="false"
                    android:textColor="@drawable/text_selector"
                    android:textSize="45.7sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/buttons" />

                <Button
                    android:id="@+id/btnNeg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/button_selector"
                    android:paddingLeft="53.3dp"
                    android:paddingRight="53.3dp"
                    android:paddingTop="1.3dp"
                    android:paddingBottom="1.3dp"
                    android:tag="binding_4"                   
                    android:textAllCaps="false"
                    android:textColor="@drawable/text_selector"
                    android:textSize="45.7sp"
                    android:textStyle="bold"
                                                                
                    app:layout_constraintStart_toEndOf="@id/btnPos"
                    app:layout_constraintTop_toTopOf="@+id/buttons"
                    tools:visibility="visible" />

            </LinearLayout>


        </RelativeLayout>


    </com.esightcorp.hmd.lib.customdialoglib.MenuCustomLayout>



         